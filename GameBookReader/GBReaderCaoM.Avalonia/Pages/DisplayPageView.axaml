<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="GBReaderCaoM.Avalonia.Pages.DisplayPageView">
	<ScrollViewer HorizontalAlignment="Center" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto">
		<StackPanel HorizontalAlignment="Center" Margin="10" Spacing="8">
			<TextBlock x:Name="SuccessMessage" Foreground="Green" IsVisible="False"/>
			<TextBlock x:Name="ErrorMessage" Foreground="Red" IsVisible="False"/>
			<Button HorizontalAlignment="Center" Click="OnClickGoToHome">Revenir Ã  l'accueil</Button>
			<TextBlock TextWrapping="Wrap" Margin="6" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" x:Name="NumberPage"/>
			<TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" Margin="6" x:Name="TextPage"/>
			<Button HorizontalAlignment="Center" Margin="5" IsVisible="False" x:Name="RestartReadingButton" Click="OnRestartReading">
				Recommencer la lecture
			</Button>
			<StackPanel HorizontalAlignment="Center" Margin="10" Spacing="8" x:Name="ChoicesPanel"/>
		</StackPanel>
	</ScrollViewer>
</UserControl>
